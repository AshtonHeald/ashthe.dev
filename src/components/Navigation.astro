---
import ToggleTheme from "./ToggleTheme.vue";
const currentPath = Astro.url.pathname;
import Logo from "../assets/logo.svg";

const navLinks = [
    { href: "/", text: "Home", icon: "i-ri-home-4-line" },
    { href: "/about", text: "About", icon: "i-ri-user-line" },
    { href: "/projects", text: "Portfolio", icon: "i-ri-folder-2-line" },
    { href: "/posts", text: "Blog", icon: "i-ri-pages-line" },
];

const iconMenu = [
    {
        href: "https://bsky.app/profile/ashtonheald.me",
        icon: "i-ri-bluesky-line",
        label: "BlueSky",
    },
    {
        href: "https://github.com/AshtonHeald",
        icon: "i-ri-github-line",
        label: "Github",
    },
    { href: "/rss.xml", icon: "i-ri-rss-line", label: "RSS Feed" },
];
---

<header
    class="flex h-[72px] items-center justify-center p-4 md:h-[104px] md:p-8"
>
    <a href="/" class="text-accent-foreground md:left-6.5 absolute left-2.5">
        <Logo class="h-[55px] w-[55px]" />
    </a>
    <nav class="ml-auto">
        <ul class="flex gap-5">
            {
                navLinks.map(({ href, text, icon }) => (
                    <li class="relative">
                        <a href={href} class="flex items-center gap-2">
                            {/* Show icon on small screens */}
                            <span class="sm:hidden">
                                <span class={`${icon}`} />
                            </span>

                            {/* Show text on larger screens */}
                            <span class="hidden sm:inline">{text}</span>
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
    <ul class="border-border ml-5 flex h-4 items-center gap-4 border-l pl-4">
        {
            iconMenu.map(({ href, icon, label }) => (
                <li>
                    <a href={href} aria-label={label}>
                        <div class={`icon ${icon}`} />
                    </a>
                </li>
            ))
        }
        <li>
            <ToggleTheme client:load />
        </li>
    </ul>
</header>
