{
    "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        },
        {
            "files": "*.vue",
            "options": {
                "parser": "vue",
                "tabWidth": 4,
                "useTabs": false
            }
        }
    ],
    "tabWidth": 4,
    "useTabs": false
}
